
<h3>Period!</h3>

  <div class="period">
    <div class="period-top">
      <img src=<%= @period.image %> alt="Period Img" class="post-image-small">
    </div>
    <div class="period-body">
      <h2><%= @period.name %></h2>
      <h6><%= @period.start_time %> to <%= @period.end_time %></h6>
      <h4><%= @period.description %></h4>
<% if current_user.id == @period.user_id %>
      <%= link_to "Edit", period_edit_path(@period.id) %>
      <%= button_to "Delete", period_delete_path(@period), method: :delete, params: {period_id: @period.id} %>

    <% if flash[:error] %>
      <div class="notice">
        <%= flash[:error] %>
      </div>
    <% end %>
<% end %>
    </div>

<h3>Affliated Posts</h3>
  <% if @posts %>
    <% @period.posts.each do |post|%>
    <div class="post"> 
      <%= link_to post.title, post %>
    </div>
    <% end %>
  <% end %>

  <li><%= link_to @period.user.first_name + " " + @period.user.last_name, user_id_path(@period.user.id)%></li>
  

  </div>


