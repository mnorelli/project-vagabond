 <div class="container"> 
  <h3>User Settings</h3>

  <%= form_for @user, url: update_user_path(@user), method: :patch  do |f| %>

  <div>
      <label>Update Email</label><%= f.text_field :email, value: @user.email %>
      <label>Confirm New Email</label><%= f.text_field :email_confirmation, required: true %>
  </div>

  <div>
      <label>Change Password</label><%= f.password_field :password %>
      <label>Confirm Password</label><%= f.password_field :password_confirmation, required: true %>
  </div>

  <%=f.submit "Save", class:"cyan btn" %>
  <br>
  <br>
  <% end %>
  
  <div class="divider"></div>
  <br>

  <div>
    <%= button_to "Delete Account", user_id_path, class:"red darken-3 btn", alert: "Are you sure? This action is permanent.", :method =>:delete %>
  </div>
  <br>
</div>
<% end %>