<div class="nameDiv">
  <h2><%= @user.first_name %> <%= @user.last_name%></h2>
</div>
<div>
	<img class="circle responsive-img" src="<%= @user.image%>"></img>
</div>

<br>
User Since: <%= @user.created_at %>


<div>Your Visit Places</div>
<% @posts.each do |post| %>
<hr>
  <img class="post-image-small" src="<%= post.image %>" alt="image for post">
  <h4><%= link_to post.title, post_path(post) %></h4>
  <h6><%= post.post_date %>  </h6>
  <h6><%= post.description %> </h6>
  <%end%>

<div>Time Adventures</div>
<% @periods.each do |period| %>
<br>
<div><%= link_to period.name, period_id_path(period)%></div>
<div><%=period.start_time%></div>

<% end %>

<% if current_user.id == @user.id %>
	

<!-- Modal Trigger -->

  <button data-target="modal1" class="cyan btn modal-trigger">Edit Profile</button>

  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h3>Edit profile</h3>

  		<%= form_for @user, url: update_user_path(@user), method: :patch  do |f| %>

    	<div>
      		<label>First Name</label><%= f.text_field :first_name, value: @user.first_name %>
    	</div>

    	<div>
     		<label>Last Name</label><%= f.text_field :last_name, value: @user.last_name %>
    	</div>

    	<div>
      		<label>Image</label><%= f.text_field :image, value: @user.image %>
    	</div>

    	<div class="modal-footer">
      		<%=f.submit "Save", class:"cyan btn" %>
    	</div>
    	<% end %>
  	</div>
  </div>

	<%= button_to 'User Settings', user_settings_path, class:"cyan btn", :method =>:get %>

  <% end %>

  <script>
  $(document).ready(function(){
    $('.modal-trigger').leanModal();
  });
  </script>
